<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center" id="top-bar">
		<img class="burger-pic" src="../assets/images/burger.png"/>
		<h1> Eat Dat Burger! </h1>
		</div>

	<div class="col-sm-6 text-center" class="task">
		<div class="row">
		{{#each burger_data}}
			{{#unless this.devoured}}
			<div class="col-sm-8 text-center">
			<pre>{{this.id}}. {{this.burger_name}}</pre>
			</div>
			<div class="col-sm-4 text-center">
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input input type="hidden" type="text" name="burger_id" value={{this.id}}><br>
					<button type="submit" class="btn btn-defualt">Devour It!</button>
				</form>
			</div>
			{{/unless}}
			{{/each}}
			</div>
		</div>
		<div class="col-sm-6 text-center" class="task">
			{{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
					{{/if}}
					{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center enter_section">
		<form action="/burgers/create" method="POST">
			<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
		</form>
		<br>
		<p>Enter the kind of burger you want to devour, then click the submit button.</p>
	</div>
</div>
</div>